.header
    top 0
    width 100%
    height 65px
    z-index 5
    position fixed
    background-color #2a83c0
    &:before
      bottom: -70px;
      content: '';
      width: 100%;
      height: 164px;
      position: absolute;
      background-image: url('../images/header-bg.png');
      background-repeat: no-repeat;
      background-position: center;

.navbar-nav
  text-transform uppercase
  font-weight bold
  font-size 1.3em

.navbar-default
  padding-top 7px
  border 0

.titulo-nav
  position absolute
  color transparent

main
  margin-top 160px
  .home &
    margin-top 0
    padding 0

.home-slider
  border-bottom 8px solid #3c85bd

@media (max-width: $screen-sm-max)
    .header
      &:before
        display none
      .container
        padding 0
    .site-name
      font-size 1em
      margin-top 0
